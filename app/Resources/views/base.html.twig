<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Brew-Bro!{% endblock %}</title>
            <link rel="stylesheet" href="{{ asset('css/fontello/css/fontello.css') }}" type="text/css"/>
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/customStyle.css') }}" type="text/css"/>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('images/Icon.ico') }}" />
    </head>
    <body>
    {% block navBar %}
        <!-- Fixed navbar -->
        <nav class="navbar navbar-inverse navbar-custom navbar-fixed-top" style="max-height: 50px;">
            <div class="navbar-header ">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href=" {{ path('homepage') }}"><span class="glyphicon glyphicon-home"></span> Brew-Bro!</a>
             </div>
             <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('about') }}">O nas</a></li>
                    <li><a href="{{ path('posts') }}">Receptury</a></li>
                    <li class="dropdown">
                        {% if is_granted('ROLE_USER') %}
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Moje konto <span class="glyphicon glyphicon-user"></span><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('fos_user_profile_show') }}"><span class="glyphicon glyphicon-wrench"></span> Mój profil</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-list-alt"></span> Moje receptury</a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-log-out"></span> Wyloguj się</a></li>
                        </ul>
                        {% endif %}
                    </li>
                    </ul>
                        <ul class="nav navbar-nav navbar-right custom-margin-right-sm">
                            <li><a>Brew - Panel </a></li>
                            <li><a href="{{ path('brew-panel') }}"><span><img class="custom-margin-none" src="{{ asset('images/Logo-sm.png') }}" alt="beer-bro"></span></a></li>
                            <li><a href="#">Szukaj <span class="glyphicon glyphicon-search"></span></a></li>
                            <li><a href="{{ path('about') }}">Kontakt</a></li>
                            <li><a href="{{ path('fos_user_security_login') }}">ZALOGUJ SIĘ <span class="glyphicon glyphicon-log-in"></span></a></li>
                            <li><a href="{{ path('fos_user_registration_register') }}">ZAREJESTRUJ SIĘ</a></li>
                        </ul>
                    </ul>
                </ul>
            </div><!--/.nav-collapse -->
        </nav>
    {% endblock %}
        <div class="custom-margin-top-md">
            {% block body %}
            {% endblock %}
        </div>
    {% block footer %}
        <div class="footer">
            <div class="footer-content">
                <div class="row">
                    <div class="col-md-6">
                        <h4>Znajdź nas!</h4>
                        <p class="glyph-fb"><a href="#"><i class="demo-icon icon-facebook-official font-md"></i>https://www.facebook.com/###</a></p>
                        <p class="glyph-twit"><a href="#"><i class="demo-icon icon-twitter font-md"></i>https://twitter.com/###</a></p>                       
                    </div>
                    <div class="col-md-6">
                        <h5><b>Nawigacja</b></h5>
                        <ul>
                            <li><b><a href="{{ path('about') }}">O nas</a></b></li>
                            <li><b><a href="{{ path('posts') }}">Receptury</a></b></li>
                            <li><a href="{{ path('brew-panel') }}"><b>Brew-panel </b><img src="{{ asset('images/Icon.ico') }}" alt="b-b"></a></li>
                            <li><b><a href=" {{ path('homepage') }}">Strona główna</a></b></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>


    {% endblock %}
    {% block javascripts %}
    <!-- include javascript, jQuery FIRST -->
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    {% endblock %}
    </body>
</html>